<mapper namespace="com/spoid/mybatis/spoidMapper.xml">
	<select id="bestView" resultType="com.spoid.dto.ProductDTO">

		<![CDATA[
			SELECT * FROM (SELECT * FROM minproduct 
							ORDER BY purchasecnt DESC) 
			WHERE ROWNUM <=8
		]]>
	</select>
	<select id="newView" resultType="com.spoid.dto.ProductDTO">

		<![CDATA[
		SELECT * FROM (SELECT * FROM minproduct 
					   ORDER BY p_indate DESC) 
		WHERE ROWNUM <= 8
		]]>
	</select>
	<select id="eventView" resultType="com.spoid.dto.ProductDTO">

		<![CDATA[
  			SELECT * FROM (SELECT * FROM minproduct ORDER BY p_discount DESC) WHERE rownum <= 8 and p_discount > 0
		]]>
	</select>
	<!--  CRUD 
			parameterType 무조건 작성
			select만 제외한 resultType은 생략 가능
			select의 성공 여부를 나타내주는 resultType은 String이어야 한다
			단 로그인 시에는 session에 접근해야 하기 때문에 dto타입으로 사용
	 -->
 	<!-- ===========================================> -->
 	<insert id="insertMember" parameterType="com.spoid.dto.MemberDTO">
		INSERT INTO SpoidMember(id,pwd,name,birth,phone,zipcode,addr1,addr2,email) 
		VALUES(#{id},#{pwd},#{name},#{birth},#{phone},#{zipcode},#{addr1},#{addr2},#{email})
	</insert>
	
	<select id="confirmID" parameterType="String" resultType="String">
		SELECT * FROM SpoidMember WHERE id=#{userid}
	</select>
	
	<select id="confirmPwd" parameterType="com.spoid.dto.MemberDTO"  resultType="String">
		SELECT * FROM SpoidMember WHERE id=#{id} and pw=#{pwd}
	</select>
	
	<select id="loginCheck"  parameterType="com.spoid.dto.MemberDTO" resultType="com.spoid.dto.MemberDTO">
		SELECT * FROM SpoidMember
		WHERE id=#{id} AND pw=#{pw}
	</select>
	
	<update id="updateMember" parameterType="com.spoid.dto.MemberDTO">
			 UPDATE SpoidMember SET 
			 name = #{name}, 
			 birth = #{birth}, 
			 phone = #{phone},
			 zipcode= #{zipcode}, 
			 addr1 = #{addr1}, 
			 addr2 = #{addr2},
			 email = #{email}  
			 where id = #{id}
	</update>
	
	<update id="updatePassword" parameterType="com.spoid.dto.MemberDTO">
			UPDATE SpoidMember SET pwd = #{new_pwd} WHERE id=#{id} and pwd =#{pwd}
	</update> 
	<delete id="deleteMember" parameterType="String">
			DELETE FROM SpoidMember
			WHERE id = #{userid}
	</delete>
