	<select id="boardList" resultType = "com.spoid.dto.BoardDTO">
       
       	<![CDATA[
       		 SELECT * FROM ( SELECT rownum rnum, 
                            a.* 
                            FROM( SELECT *
                            FROM minionsboard
                            WHERE bno >0 ]]>
                
                            <if test='flag=="1"'>               
                          	 <![CDATA[AND title LIKE '%'||#{keyword}||'%' OR content LIKE '%'||#{keyword}||'%']]>
                            </if>
                            <if test='flag=="2"'>               
                            	 <![CDATA[AND title LIKE '%'||#{keyword}||'%']]>
                            </if>
                            <if test='flag=="3"'>               
                           		 <![CDATA[AND content LIKE '%'||#{keyword}||'%']]>
                            </if>
                            <if test='flag=="4"'>               
                         		 <![CDATA[AND writer LIKE '%'||#{keyword}||'%']]>
                            </if>
                            <if test='code=="new"'>
								ORDER BY bno desc                            
                            </if>                                                                        
                            <if test='code=="good"'>
								ORDER BY goodcnt desc, bno desc                            
                            </if> 
                             <if test='code=="reply"'>
								ORDER BY replycnt desc, bno desc                            
                            </if>
                             <if test='code=="cnt"'>
								ORDER BY viewcnt desc, bno desc                            
                            </if>      
                  <![CDATA[		
                            )a
                        )
       	 	WHERE rnum BETWEEN #{pageStart} AND #{perPageNum}
       	 ]]>
	</select>
	<select id="boardDetailView" resultType="com.spoid.dto.BoardDTO">
		<![CDATA[
			SELECT * FROM minionsboard
			WHERE bno = #{bno}
		]]>
	
	</select>
	
	<update id="viewCnt">
		UPDATE minionsboard
			SET viewcnt = viewcnt+1
			WHERE bno = #{bno}
	</update>
	<insert id="boardInsert" parameterType="com.spoid.dto.BoardDTO">
		
		<choose>
			<when test="content != null">
			INSERT INTO minionsboard(bno, title, content, writer,filename,filesize) VALUES(seq_minions.NEXTVAL, #{title},#{content},#{writer},#{filename},#{filesize})
			</when>
			<otherwise>
			INSERT INTO minionsboard(bno, title, writer,filename,filesize) VALUES(seq_minions.NEXTVAL, #{title},#{writer},#{filename},#{filesize})
			</otherwise>
		
		</choose>
		
	</insert>
	<update id="boardUpdate" parameterType="com.spoid.dto.BoardDTO">
		UPDATE minionsboard 
			SET title = #{title},
				writer = #{writer}, 
				
			<if test="filename != 'no'">	
				filename=#{filename}, 
				filesize=#{filesize},
			</if>
				content=#{content} 
			WHERE bno=#{bno}
	</update>
	<delete id="boardDelete" parameterType="String">
		DELETE FROM minionsboard WHERE bno=#{bno}
	</delete>
	
	<!--  ================================= -->
	<!-- ReplyDAO -->
	<select id="replyListAll" parameterType="String" resultType="com.spoid.dto.ReplyDTO">
		SELECT * FROM minionsreply
		WHERE bno = #{bno}
		ORDER BY rno ASC
	</select>
	<delete id="deleteComment" parameterType="String">
		DELETE FROM minionsreply WHERE rno=#{rno}
	</delete>
	
	
	<insert id="replyInsert" parameterType="com.spoid.dto.ReplyDTO">
		INSERT INTO minionsreply(rno, content, writer,bno) 
		VALUES(seq_minionsreply_rno.NEXTVAL,#{content},#{writer},#{bno})	
	</insert>
	<update id="updateReplyCnt"  parameterType="com.spoid.dto.BoardDTO">
		 UPDATE minionsboard 
		 SET replycnt=replycnt+#{flag}
		 WHERE bno=#{bno}
	
	</update>
	<update id="updateGoodCnt"  parameterType="String">
		 UPDATE minionsboard 
		 SET  goodcnt=goodcnt+1
		 WHERE bno=#{bno}
	
	</update>
	<update id="replyUpdate" parameterType="com.spoid.dto.ReplyDTO">
		 UPDATE minionsreply 
		 SET  content=#{content}
		 WHERE bno=#{bno} AND rno=#{rno}	
	</update>
 </mapper>