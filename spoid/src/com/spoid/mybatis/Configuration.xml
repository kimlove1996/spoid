<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
    
<configuration>
	<!-- DB접속 정보 값을 가지고 있는 파일 설정 -->
	<properties resource="com/spoid/mybatis/db.properties"/><!-- DB의경로의 패키지명까지 풀네임으로 적을 것.우리가 직접 커넥션맺는 것을 자동으로 맺어줌.-->

	<!-- 별명 부여 , 일단 주석 좀 이따가 쓸거임.-->
	<!-- <typeAliases>
		<typeAlias type="" alias=""/>
	</typeAliases> -->
	
	<!-- 접속정보 세팅 -->
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED"><!-- 기존것으로 하려면 UNPOOLED ,  -->
				<property name="driver" value="${driver}"/>
				<property name="url" value="${url}"/>
				<property name="username" value="${username}"/>
				<property name="password" value="${password}"/>
				<property name="poolMaximumActiveConnections" value="20"/><!-- 활성화된 최대 커넥션 수(20개. 이상은 불가.) -->
				<property name="poolMaximumIdleConnections" value="20"/><!-- 유휴상태에서 최대 커넥션 수 -->
				<property name="poolMaximumCheckoutTime" value="20000"/><!-- 최대 커넥션 획득 시간=20000=20초 -->
				<property name="poolTimeToWait" value="15000"/><!-- pool이 비정상적으로 긴 경우 커넥션을 다시 얻으려고 시도하는 셋팅. 15000=15초-->
			</dataSource>
		</environment>
	</environments>
	
	<!-- Mapper.xml 파일 설정 -->
	<mappers>
		<mapper resource="com/spoid/mybatis/spoidMapper.xml"/>
	</mappers>
	
	
</configuration>


	